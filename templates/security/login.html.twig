{% extends 'base.html.twig' %}

{% block title %}Авторизация{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 17px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="example-wrapper">
           Вы уже вошли в аккаунт {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Выйти из аккаунта</a>
        </div>
    {% endif %}

    <div class = 'example-wrapper'>
    <h1 class="h3 mb-3 font-weight-normal">Пожалуйста авторизируйтесь</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Пароль</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-primary my-2 my-sm-2" type="submit">Войти</button>
        <a href="/" class="btn btn-primary my-2 my-sm-2" >На главную</a>
    </div>
</form>
{% endblock %}
