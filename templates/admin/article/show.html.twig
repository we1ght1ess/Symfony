{% extends 'base.html.twig' %}

{% block title %}Статья{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ article.body }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ article.createAt ? article.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}"  class="btn btn-primary">К списку</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}"  class="btn btn-primary">Редактировать</a>

    {{ include('admin/article/_delete_form.html.twig') }}
{% endblock %}
